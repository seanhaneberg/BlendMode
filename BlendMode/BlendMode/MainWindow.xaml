<Window x:Class="BlendMode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlendMode"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" x:Name="Image2" Source="Images\image2.jpg"/>
        <Image Grid.Row="0" x:Name="Image1" Source="Images\image1.jpg" Opacity="0.5"/>
        <Slider Grid.Row="1" x:Name="BlendModeSlider"/>
    </Grid>
</Window>
